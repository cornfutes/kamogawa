{{define "page"}}
<div class="🐉 🪜" id="search-hero">
  <div class="💪 🦠">
    <h3 id="s-h">Search Results for: <span id="search-original-query"></span></h3>
    <nav class="💪 🦷 ⚖️" style="padding-top: 3px">
      <span id="s-re" class="🐕 ⚡" tabindex=0 onkeyup="">
        search
      </span>
      <span tabindex=0 class="🐕 filter-expander-arrow filter-expander-arrow-down" id="s-mod">tools<i></i></span>
    </nav>
  </div>
  <input id="query" value="{{.Query}}" placeholder="Type to search..."></input>
  <div class=" 💪 🥷 🦠" id="query-builder">
    <div>
      <label for=provider>Provider:</label>
      <select name=provider onchange="change(event, 0)">
        <option value=all>All (implicit) </option>
        <option value=gcp>GCP</option>
        <option value=aws>AWS</option>
        <option value=azure>Azure</option>
      </select>
      <label for=algo>Algo:</label>
      <select name=algo onchange="change(event, 1)">
        <option value=substring>substring (implicit) </option>
        <option value=fulltext>Full-text</option>
      </select>
      <label for=time>Modified:</label>
      <select name=time onchange="change(event, 2)">
        <option value=all>All time</option>
        <option value=last24>Last 24h</option>
        <option value=lastmonth>Last Month (implicit) </option>
      </select>
    </div>
    <div>
      <span class="🐕 🥷" id="s-b-r">reset</spn>
    </div>
  </div>
</div>
{{if .Unauthorized}}
<p>
  You've not authorized us for GCP access. <a href="authorization">Securely grant access.</a>
</p>
{{else}}
{{if .IsRegex}}
<p class=🍕>warning: regex is not supported in the demo</p>
{{end}}
{{if .HasFilter}}
<p class=🍕>warning: in the demo, we ignore the search filter (everything after the ':::') </p>
{{end}}
{{if .Error }}
<p>{{.Error}}</p>
{{else if .HasResults}}
<p>{{.CountTotalResults}} results ({{.Duration}})</p>
<div class="🪜" style="padding: 10px;">
  {{ range .Results }}
  <div class="🎴" style="overflow:hidden">
    <h5 class="truncate"><a href="{{.Link}}">{{.Link}}</a></h5>
    {{if eq .Product "GCE"}}
    <h3>Compute Engine VM "{{.Name}}"</h3>
    {{else if eq .Kind "Project"}}
    <h3> GCP Project "{{.Name}}"</h3>
    {{else if eq .Kind "Service"}}
    <h3> GAE Service "{{.Name}}"</h3>
    {{else if eq .Kind "Version"}}
    <h3> GAE Version "{{.Name}}"</h3>
    {{else}}
    <h3></h3>
    {{end}}
    <p>{{.Text}}</p>
  </div>
  {{ end }}
</div>
{{else}}
<p>No results found</p>
{{end}}
{{end}}
<style>
  #search-hero {
    padding-bottom: 3px;
    border-bottom: 1px solid var(--g);
  }

  #query-builder {
    font-size: 14px;
    padding: 0px 20px 8px 20px;
    max-height: 50px;
    overflow: hidden;
    transition: max-height 1s;
  }

  #query-builder>* {
    padding-top: 14px;
  }

  #query-builder.🥷 {
    max-height: 1px;
    display: flex;
  }

  #query-builder label {
    margin-right: 4px;
  }

  #query-builder select {
    background-color: transparent;
    color: var(--f);
    padding: 0 1em 0 0;
    margin: 0;
    outline: 1px solid var(--g);
    margin-right: 12px;
  }

  .🎴 {
    border: 1px solid var(--e);
    margin-bottom: 7px;
  }

  .🎴>h3 {
    padding-left: 20px;
  }

  .🎴>h5.truncate {
    width: 500px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding: 5px 20px;
    margin-top: 10px;
    margin-bottom: 0;
  }

  .🎴>p {
    font-size: 12px;
    padding-left: 20px;
    margin-bottom: 20px;
  }

  .🐉 h3 {
    padding-right: 0;
    margin-bottom: 0;
    border-bottom: 0;
  }

  .🐉 input {
    color: var(--a);
    opacity: 1;
    background-color: var(--f);
    margin: 0;
    border-radius: 20px;
    border: 0;
    outline: none;
    font-family: monospace;
    font-size: 20px;
    font-weight: 300;
    padding: 10px;
    box-shadow: 0 0 15px var(--f);
    transition: opacity 1s, border-radius .5s, box-shadow 1s;
  }

  .🐉 input:focus {
    opacity: .8;
    border-radius: 0px;
    transition: opacity 1s, border-radius .5s, box-shadow 1s;
    box-shadow: 0 0 0 black;
  }

  #s-re {
    border-bottom: 5px solid var(--f);
  }

  #s-re.⚡ {
    border-bottom: 0;
    opacity: .65;
    border-top: none;
    text-decoration: line-through;
    color: var(--i);
  }

  #s-re.⚡:hover {
    cursor: not-allowed;
  }

  @media all and (max-width: 600px) {
    .🎴>h5.truncate {
      width: 300px;
    }
  }

  .filter-expander-arrow>i {
    border: solid var(--e);
    border-width: 0 2px 2px 0;
    display: inline-block;
    /** consider adding class */
    padding: 4px;
    margin-left: 10px;
    /** consider remove */
  }

  .filter-expander-arrow-down>i {
    transform: rotate(45deg) translateX(-3px)
  }
</style>
{{end}}